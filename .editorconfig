# EditorConfig helps maintain consistent coding styles across editors

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.js]
quote_type = double
semicolon = true

[*.json]
indent_style = space
indent_size = 2
